<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.javad.grammar">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/eng"
        android:label="@string/app_name"
        android:roundIcon="@drawable/eng"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grammar"
        tools:targetApi="31">
        <activity
            android:name=".AddEditNoteActivity"
            android:exported="false" />
        <activity
            android:name=".NoteActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BottomNavigation"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".DescriptionActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>